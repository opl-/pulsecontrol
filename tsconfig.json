{
	"compilerOptions": {
		"alwaysStrict": true,
		"declaration": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "./dist/",
		"preserveConstEnums": true,
		"sourceMap": true,
		"strict": true,
		"target": "es6",
	},
	"include": [
		"lib/**/*",
	],
	"exclude": [
		"node_modules",
	],
}
